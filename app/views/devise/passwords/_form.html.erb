<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: ''}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, nil, class: 'col-form-label' %>
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.submit "Send Instructions", class: "btn btn-style1-revers" %>
  </div>
<% end %>

