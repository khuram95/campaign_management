<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: ''}) do |f| %>
  <div class="w-50 m-auto">
    <div class="form-group py-2">
      <%= f.label :name, nil, class: "col-form-label" %>
      <%= f.text_field :name, autofocus: false, required: false, class: "form-control", placeholder: "Name"    %>
    </div>

    <div class="form-group py-2">
      <%= f.label :email, nil, class: "col-form-label" %>
      <%= f.email_field :email, autofocus: false, required: true, class: "form-control", value: params[:email], placeholder: "Email"   %>
    </div>

    <div class="form-group py-2">
      <%= f.label :password, nil, class: "col-form-label" %>
      <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="form-group float-end py-2">
      <%= f.submit "SIGNUP", class: "btn btn-primary", id: "signup_submit_btn" %>
    </div>
  </div>
<% end %>

